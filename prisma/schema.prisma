generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(uuid())
  username   String      @unique
  email      String      @unique
  password   String
  roles      Roles[]     @default([User])
  containers Container[] @relation("ContainerUsers")
}

model Container {
  id          String  @id @default(uuid())
  name        String
  description String?
  ownerId     String

  users User[] @relation("ContainerUsers")
}

enum Roles {
  Admin
  Moderator
  User
}
